<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sdis.wetranslate.MenuActivity"
    tools:showIn="@layout/app_bar_menu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="541dp"
        tools:layout_editor_absoluteY="-17dp"
        tools:layout_editor_absoluteX="-11dp">

        <TextView
            android:id="@+id/textTranslateMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="41dp"
            android:text="Nova tradução:"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/textTranslateInput"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Texto para traduzir"
            android:gravity="top"
            android:layout_below="@+id/spinnerTranslateFrom"
            android:layout_alignLeft="@+id/spinnerTranslateFrom"
            android:layout_alignStart="@+id/spinnerTranslateFrom"
            android:layout_marginTop="28dp"
            android:layout_marginRight="47dp"/>

        <Button
            android:id="@+id/buttonTranslateSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textTranslateInput"
            android:layout_alignRight="@+id/textTranslateInput"
            android:layout_alignEnd="@+id/textTranslateInput" />

        <Spinner
            android:id="@+id/spinnerTranslateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/textTranslateMsg"
            android:layout_alignLeft="@+id/textTranslateMsg"
            android:layout_alignStart="@+id/textTranslateMsg" />

        <Spinner
            android:id="@+id/spinnerTranslateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textTranslateInput"
            android:layout_alignEnd="@+id/textTranslateInput"
            android:layout_alignBottom="@+id/spinnerTranslateFrom" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinnerTranslateTo"
            android:layout_alignLeft="@+id/spinnerTranslateFrom"
            android:layout_alignStart="@+id/spinnerTranslateFrom"
            android:text="De:" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinnerTranslateTo"
            android:layout_alignLeft="@+id/spinnerTranslateTo"
            android:layout_alignStart="@+id/spinnerTranslateTo"
            android:text="Para:" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
