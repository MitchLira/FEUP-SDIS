<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textToTranslate"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="top"
            android:layout_marginTop="36dp"
            android:text="Texto exemplo"
            android:layout_below="@+id/buttonRequests"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/textTranslated"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="top"
            android:hint="Traduz aqui"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textToTranslate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonTranslateSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_below="@+id/textTranslated"
            android:layout_alignRight="@+id/textTranslated"
            android:layout_alignEnd="@+id/textTranslated"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="40dp" />

        <Spinner
            android:id="@+id/spinnerTranslateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <Spinner
            android:id="@+id/spinnerTranslateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/spinnerTranslateFrom"
            android:layout_toRightOf="@+id/buttonRequests"
            android:layout_toEndOf="@+id/buttonRequests" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinnerTranslateTo"
            android:layout_alignLeft="@+id/spinnerTranslateFrom"
            android:layout_alignStart="@+id/spinnerTranslateFrom"
            android:text="De:" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinnerTranslateTo"
            android:layout_alignLeft="@+id/spinnerTranslateTo"
            android:layout_alignStart="@+id/spinnerTranslateTo"
            android:text="Para:" />

        <Button
            android:id="@+id/buttonRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir"
            android:layout_below="@+id/spinnerTranslateTo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/contentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textTranslated" />

    </RelativeLayout>
</ScrollView>